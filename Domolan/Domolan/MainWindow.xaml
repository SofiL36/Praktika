<Window x:Class="Domolan.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Domolan"
        mc:Ignorable="d"
        Title="Домолан" Height="450" Width="800" Icon="Images/Icon/Icon.jpg">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="175*"/>
            <ColumnDefinition Width="221*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="65"/>
            <RowDefinition Height="352*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="Black" Grid.ColumnSpan="2">
            <Image Width="50" Margin="10" Source="Images/Pictures/Picture.png" HorizontalAlignment="Left"  VerticalAlignment="Center"/>
            <TextBlock x:Name="pageName" Margin="10" Text="Главное окно" FontFamily="Times New Roman" FontSize="25" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="White"/>
        </StackPanel>
        <Frame  x:Name="mainFrame" Grid.Row="1" NavigationUIVisibility="Hidden" Grid.ColumnSpan="2" />
    </Grid>
</Window>
